<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_project_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fragment_project_list_include_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/default_action_bar"
        android:layout_gravity="center_horizontal|top" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_project_list_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_project_list_include_headline"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/fragment_project_list_image_add_project"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:src="@drawable/icon_add"
        android:tint="@color/defaultColor"/>


</RelativeLayout>