<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/fragment_standard_card_view"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"

    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"

    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fragment_notification_filter_list_card_view_relative_layout_headline"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:longClickable="false">

                <RelativeLayout
                    android:id="@+id/fragment_notification_filter_list_card_view_relative_layout_headline_number"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>

                <View
                    android:id="@+id/fragment_notification_filter_list_card_view_view_status_up_line"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/fragment_notification_filter_list_card_view_relative_layout_headline_number"
                    android:layout_toRightOf="@+id/fragment_notification_filter_list_card_view_relative_layout_headline_number"
                    android:background="@color/lightGray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/fragment_notification_filter_list_card_view_text_view_node_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/fragment_notification_filter_list_card_view_view_status_up_line"
                    android:layout_toRightOf="@+id/fragment_notification_filter_list_card_view_view_status_up_line"
                    android:text="F01"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_notification_filter_list_card_view_relative_layout_node"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:longClickable="false">

                <View
                    android:id="@+id/fragment_notification_filter_list_card_view_view_status_node_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/lightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_node_key"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="Knoten"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_node_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="F01"
                        android:layout_marginRight="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_notification_filter_list_card_view_relative_layout_active_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:longClickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_active_time_key"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="Aktive Zeit"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_active_time_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="3 Stunden"
                        android:layout_marginRight="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_notification_filter_list_card_view_relative_layout_severity"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:longClickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_severity_key"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="SchÃ¤rfe"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_severity_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="ERROR"
                        android:layout_marginRight="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_notification_filter_list_card_view_relative_layout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:longClickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_text_key"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="Text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/fragment_notification_filter_list_card_view_text_view_text_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="text...."
                        android:layout_marginRight="10dp"
                        android:maxLines="4"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>