<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/fragment_custom_list_card_view"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="0dp"

    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/fragment_custom_list_relative_layout_key_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/fragment_custom_list_text_view_key"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Key"/>

            <TextView
                android:id="@+id/fragment_custom_list_text_view_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toEndOf="@+id/fragment_custom_list_text_view_key"
                android:text="Value" />

            <TextView
                android:id="@+id/fragment_custom_list_text_view_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Headline"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:id="@+id/fragment_custom_list_view_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/defaultColor"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>