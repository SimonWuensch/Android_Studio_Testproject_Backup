<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/fragment_standard_card_view"

    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"

    android:clickable="true"

    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="3dp"

    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/fragment_notification_list_card_view_relative_layout_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:longClickable="false">

        <RelativeLayout
            android:id="@+id/fragment_notification_list_card_view_relative_layout_up_status"
            android:layout_width="50dp"
            android:layout_height="match_parent">#

            <View
                android:id="@+id/fragment_notification_list_card_view_view_status_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGray" />

            <TextView
                android:id="@+id/fragment_notification_list_card_view_text_view_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_notification_list_card_view_text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fragment_notification_list_card_view_text_view_time"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/fragment_notification_list_card_view_text_view_time"
            android:layout_marginBottom="2dp"
            android:text="10.10.17"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/fragment_notification_list_card_view_text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/fragment_notification_list_card_view_relative_layout_up_status"
            android:layout_toRightOf="@+id/fragment_notification_list_card_view_relative_layout_up_status"
            android:text="11:11:11"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/fragment_notification_list_card_view_view_status_up_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/fragment_notification_list_card_view_text_view_date"
            android:layout_toRightOf="@+id/fragment_notification_list_card_view_text_view_date"
            android:background="@color/lightGray" />

        <TextView
            android:id="@+id/fragment_notification_list_card_view_text_view_node_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/fragment_notification_list_card_view_view_status_up_line"
            android:layout_toRightOf="@+id/fragment_notification_list_card_view_view_status_up_line"
            android:text="F01"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_notification_list_card_view_relative_layout_down"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:longClickable="false">

        <View
            android:id="@+id/fragment_notification_list_card_view_view_status_down_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:background="@color/lightGray" />

        <TextView
            android:id="@+id/fragment_notification_list_card_view_text_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="TEXT"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</android.support.v7.widget.CardView>