<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_standard"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fragment_module_list_include_headline"
        layout="@layout/default_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_standard_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/fragment_notification_filter_list_add_filter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/fragment_standard_recycler_view"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/icon_add"
            android:tint="@color/defaultColor" />

    </RelativeLayout>


</LinearLayout>