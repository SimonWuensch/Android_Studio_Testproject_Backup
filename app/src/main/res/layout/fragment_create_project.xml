<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ssi.ssn.com.ssi_client.fragment.FragmentCreateProject">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/default_action_bar"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/fragment_create_project_include_head_line" />

    <ImageView
        android:id="@+id/fragment_create_project_image_view_project"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/fragment_create_project_include_head_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_project"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/fragment_create_project_add_project"
        android:layout_below="@+id/fragment_create_project_image_view_project"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />


</RelativeLayout>
