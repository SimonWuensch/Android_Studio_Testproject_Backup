<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/default_action_bar_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/default_border">

        <ImageView
            android:id="@+id/default_action_bar_image_view_page_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/default_action_bar_text_view_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Headline"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toEndOf="@+id/default_action_bar_image_view_page_icon"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"/>

        <ImageButton
            android:id="@+id/default_action_bar_button_settings"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:src="@drawable/icon_menu"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/default_action_bar_relative_layout_ssi_banner"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/default_action_bar_relative_layout">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/ssiYellow"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_ssi_logo"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"/>

    </RelativeLayout>
</RelativeLayout>