<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/default_action_bar_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_border"
        android:padding="10dp">

        <ImageView
            android:id="@+id/default_action_bar_image_view_page_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_app_logo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/default_action_bar_image_view_page_icon"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/default_action_bar_text_view_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_toLeftOf="@+id/default_action_bar_button_reload"
                android:text="Headline"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/default_action_bar_button_reload"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:src="@drawable/icon_reload"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/default_action_bar_relative_layout_ssi_banner"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/default_action_bar_relative_layout">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/ssiYellow" />

        <TextView
            android:id="@+id/default_action_bar_text_view_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:layout_alignParentTop="true"
            android:paddingLeft="2dp"
            android:textAppearance="?android:attr/buttonStyleSmall"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_ssi_logo" />

    </RelativeLayout>
</RelativeLayout>